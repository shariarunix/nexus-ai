{
    "info": {
        "_postman_id": "rag-service-collection",
        "name": "RAG Service (Go + Gemini)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Auth - Register",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/v1/auth/register",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "auth",
                        "register"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Auth - Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/v1/auth/login",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "auth",
                        "login"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Upload Document",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{jwt_token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "file",
                            "type": "file",
                            "src": []
                        },
                        {
                            "key": "chapter",
                            "value": "1",
                            "type": "text"
                        },
                        {
                            "key": "subject",
                            "value": "Physics",
                            "type": "text"
                        },
                        {
                            "key": "language",
                            "value": "en",
                            "type": "text"
                        }
                    ]
                },
                "url": {
                    "raw": "{{base_url}}/api/v1/documents/upload",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "documents",
                        "upload"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Generate Questions",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{jwt_token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"topic\": \"Newton's Laws\",\n    \"chapter\": 1,\n    \"count\": 5,\n    \"language\": \"en\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/v1/questions/generate",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "questions",
                        "generate"
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "YOUR_SUPABASE_JWT_HERE",
            "type": "string"
        }
    ]
}